<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/common_gradient">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/splash_logo"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tvSplashTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="615dp"
        android:fontFamily="@font/prompt"
        android:gravity="center"
        android:text="@string/created_by"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/tvSplashSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSplashTitle"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/prompt"
        android:gravity="center"
        android:text="@string/dipesh_vaghela"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>